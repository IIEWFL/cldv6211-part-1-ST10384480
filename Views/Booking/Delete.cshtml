@model ST10384480_CLDV_Part1.Models.Booking
@{
    ViewData["Title"] = "Delete Booking";
}
<h2>Delete Booking</h2>
<div>
    <h4>Are you sure you want to delete this booking?</h4>
    <div>
        <p>Customer: @Model.CustomerName</p>
        <p>Event: @Model.Event?.Name</p>
        <p>Venue: @Model.Event?.Venue?.Name</p>
        <p>Seats: @Model.NumberOfSeats</p>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>