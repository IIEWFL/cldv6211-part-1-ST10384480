@model ST10384480_CLDV_Part1.Models.Booking
@{
    ViewData["Title"] = "Create Booking";
}
<h2>Create Booking</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CustomerName"></label>
        <input asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EventId"></label>
        @Html.DropDownListFor(model => model.EventId, new SelectList(ViewBag.Events, "Id", "Name"), "-- Select Event --", new { @class = "form-control" })
        <span asp-validation-for="EventId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumberOfSeats"></label>
        <input asp-for="NumberOfSeats" class="form-control" />
        <span asp-validation-for="NumberOfSeats" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Create</button>
</form>