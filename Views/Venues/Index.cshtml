@model IEnumerable<ST10384480_CLDV_Part1.Models.Venue>
@{
    ViewData["Title"] = "Venues";
}
<h2>Venues</h2>
<a class="btn btn-success mb-2" href="@Url.Action("Create", "Venue")">Add New Venue</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Capacity</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venue in Model)
        {
            <tr>
                <td>@venue.Name</td>
                <td>@venue.Location</td>
                <td>@venue.Capacity</td>
                <td>
                    @if (!string.IsNullOrEmpty(venue.ImagePath))
                    {
                        <img src="@venue.ImagePath" alt="Venue Image" style="width:100px;" />
                    }
                </td>
                <td>
                    <a class="btn btn-info btn-sm" href="@Url.Action("Details", "Venue", new { id = venue.Id })">Details</a>
                    <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", "Venue", new { id = venue.Id })">Edit</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "Venue", new { id = venue.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>