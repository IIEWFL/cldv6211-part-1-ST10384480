@model ST10384480_CLDV_Part1.Models.Venue
@{
    ViewData["Title"] = "Edit Venue";
}
<h2>Edit Venue</h2>
<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Capacity"></label>
        <input asp-for="Capacity" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Venue Image (Upload to change)</label>
        <input type="file" name="imageFile" class="form-control-file" />
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
                <img src="@Model.ImagePath" alt="Venue Image" style="width:100px;" />
        }
    </div>
    <button type="submit" class="btn btn-primary mt-2">Save Changes</button>
</form>